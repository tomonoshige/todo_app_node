<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TODOアプリケーション</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <div class="container">
        <h1 class="title">ログインページ</h1>
      </div>
    </header>
    <div class="top-wrapper">
      <div class="container">
        <div class="">
          <% if(errors.length >0) { %>
            <ul>
              <% errors.forEach(error => { %>
              <li><%= error %></li>
              <% }); %>
            </ul>
          <% } %>
        </div>
        <div class="">
          <form action="/login" method="post" class="new">
            <input type="text" name="email" placeholder="email">
            <input type="password" name="password" placeholder="password">
            <input type="submit" value="ログイン">
          </form>
        </div>
        <a href="/index" class="rein">一覧に戻る⬅︎</a>
        <div>
          <h3>以下本当は表示しない</h3>
          <% users.forEach((user, index) => { %>
          <p class="">id.<%= user.id %> <%= index+1 %>人目：<%= user.username %>
          </p>
          <p class="">メールアドレス：<%= user.email %></p>
          <p class="">パスワード：<%= user.password %></p>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
